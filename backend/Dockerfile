ARG JDK_VERSION="17-jdk-alpine"

# ======================================================================================================================
# Build
# ======================================================================================================================

FROM eclipse-temurin:${JDK_VERSION} AS build

# RUN apk add gcompat

WORKDIR /app

COPY . .

RUN ./gradlew --info build

# ======================================================================================================================
# Server
# ======================================================================================================================

FROM eclipse-temurin:${JDK_VERSION}

COPY --from=build /app/build/libs/maprobe.jar .

ENTRYPOINT ["java", "-jar", "./server.jar"]
